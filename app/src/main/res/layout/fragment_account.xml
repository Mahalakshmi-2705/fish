<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="fragment.AccountFragment">
<TextView
    android:id="@+id/account_tv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="Account"
    android:textSize="25dp"
    android:textStyle="bold"
    android:fontFamily="@font/inika_regular"
    android:layout_marginStart="40dp"
    android:layout_marginTop="20dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_ios_24"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="3dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="80dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/account_profile_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawablePadding="16dp"
            android:focusable="true"
            android:fontFamily="@font/inika_regular"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:padding="16dp"
            android:text="Profile"
            android:textSize="20sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/baseline_account_circle_24"
            app:drawableTint="@color/navy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"/>

        <TextView
            android:id="@+id/account_orders_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawablePadding="16dp"
            android:fontFamily="@font/inika_regular"
            android:focusable="true"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:padding="16dp"
            android:text="Orders"
            android:textSize="20sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/baseline_auto_awesome_motion_24"
            app:drawableTint="@color/navy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/account_profile_tv" />

        <TextView
            android:id="@+id/account_address_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawablePadding="16dp"
            android:fontFamily="@font/inika_regular"
            android:focusable="true"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:padding="20dp"
            android:text="Address"
            android:textSize="20sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/baseline_add_location_24"
            app:drawableTint="@color/navy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/account_orders_tv" />
        <TextView
            android:id="@+id/account_contact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawablePadding="16dp"
            android:fontFamily="@font/inika_regular"
            android:focusable="true"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:padding="20dp"
            android:text="Contact us"
            android:textSize="20sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/baseline_call_24"
            app:drawableTint="@color/navy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/account_address_tv" />


        <TextView
            android:id="@+id/account_sign_out_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawablePadding="16dp"
            android:fontFamily="@font/inika_regular"
            android:focusable="true"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:padding="16dp"
            android:textSize="20sp"
            android:text="Signout"
            app:drawableStartCompat="@drawable/baseline_arrow_circle_left_24"
            android:textStyle="bold"
            app:drawableTint="@color/navy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/account_contact" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>