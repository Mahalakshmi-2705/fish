<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"

        app:cardElevation="100dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingUpdateImage">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/categoryItem"
            android:layout_height="250dp"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp">









            <TextView
                android:id="@+id/categoryNameItemTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:layout_marginRight="230dp"
                android:text="Category Name"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/inika_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/categoryprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:layout_marginRight="300dp"
                android:text="Rs. 100"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/inika_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />





            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/settingUpdateImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:layout_marginStart="230dp"
                android:padding="15dp"
                android:src="@drawable/fish"
                app:civ_border_color="@color/itemGray"
                app:civ_border_width="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:importantForAccessibility="no"
                android:scaleType="centerCrop"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="25dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="10dp"
                app:srcCompat="@drawable/ic_delete"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/categoryprice"
                app:layout_constraintEnd_toStartOf="@id/imageView2"
                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/inika_regular"
                android:text="Remove"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/red"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/categoryprice" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="250dp"
                android:layout_marginTop="190dp">



                <ImageButton
                    android:id="@+id/addItemBtn"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:backgroundTint="@color/black"
                    android:padding="10dp"
                    android:src="@drawable/ic_add"
                    app:tint="@color/white"
                    />

                <TextView
                    android:id="@+id/itemNumberAdded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/inika_regular"
                    android:text="1 pack"
                    android:textColor="@color/navy"
                    android:textSize="18sp"

                    />

                <ImageButton
                    android:id="@+id/minusItemBtn"
                    android:layout_width="35dp"
                    android:layout_height="35dp"

                    android:backgroundTint="@color/black"
                    android:src="@drawable/ic_remove"
                    app:tint="@color/white"/>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>

